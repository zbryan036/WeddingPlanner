@model LogUser
@{
    ViewData["Title"] = "Login/Registration";
}
<div class="row" style="margin-top:50px">
    <div class="col-2"></div>
    <div class="col-4">
        <div class="row">
            <h3>Login</h3>
        </div>
        <div class="row">
            <form asp-action="Login" method="post">
                <div class="form-group">
                    <span asp-validation-for="LEmail"></span>
                    <label asp-for="LEmail"></label>
                    <input asp-for="LEmail" class="form-control">
                </div>
                <div class="form-group">
                    <span asp-validation-for="LPassword"></span>
                    <label asp-for="LPassword"></label>
                    <input asp-for="LPassword" class="form-control">
                </div>
                <button type="submit" class="btn btn-primary">Log In</button>
            </form>
        </div>
    </div>
    <div class="col-4">
        <partial name="Registration"/>
    </div>
    <div class="col-2"></div>
</div>